<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <!-- ejs is used with the following syntax -->
    <!-- <%  %>  -->
    <!-- if we are accessing a variable we need the = symbol -->
    <!-- <%=  %>  -->

    <!-- we are including the partial for the nav
    for including we need the - sign -->
    <%- include("./partials/nav.ejs") %>

    <div class="blogs content">
      <h2>All blogs</h2>
      <% if(blogs.length > 0 ) { %> <% blogs.forEach(blog => { %>
      <h3 class="title"><%= blog.title %></h3>
      <p class="snippet"><%= blog.snippet %></p>
      <% }) %> <% } else { %>
      <p>No blogs to display</p>
      <% } %>
    </div>
    <%- include("./partials/footer") %>
  </body>
</html>
